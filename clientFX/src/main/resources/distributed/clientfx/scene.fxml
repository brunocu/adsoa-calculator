<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="distributed.clientfx.FXMLController">
   <VBox>
      <VBox>
         <children>
            <Label fx:id="labelHistory" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" style="-fx-background-color: white;" textFill="gray">
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label fx:id="labelResult" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" style="-fx-background-color: white;" text="0">
               <font>
                  <Font size="24.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <opaqueInsets>
            <Insets top="5.0" />
         </opaqueInsets>
         <effect>
            <InnerShadow color="dimgray" radius="2.0" />
         </effect>
      </VBox>
      <GridPane hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints halignment="CENTER" />
            <ColumnConstraints halignment="CENTER" />
            <ColumnConstraints halignment="CENTER" />
            <ColumnConstraints halignment="CENTER" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <Button mnemonicParsing="false" onAction="#clearEverythingFunction" prefHeight="40.0" prefWidth="40.0" text="CE" />
         <Button mnemonicParsing="false" onAction="#clearFunction" prefHeight="40.0" prefWidth="40.0" text="C" GridPane.columnIndex="1" />
         <Button mnemonicParsing="false" onAction="#eraseFunction" prefHeight="40.0" prefWidth="40.0" text="⌫" GridPane.columnIndex="2" />
         <Button mnemonicParsing="false" onAction="#processOperator" prefHeight="40.0" prefWidth="40.0" text="÷" GridPane.columnIndex="3" />
         <Button mnemonicParsing="false" onAction="#processNumber" prefHeight="40.0" prefWidth="40.0" text="7" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" onAction="#processNumber" prefHeight="40.0" prefWidth="40.0" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" onAction="#processNumber" prefHeight="40.0" prefWidth="40.0" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" onAction="#processOperator" prefHeight="40.0" prefWidth="40.0" text="×" GridPane.columnIndex="3" GridPane.rowIndex="1" />
         <Button mnemonicParsing="false" onAction="#processNumber" prefHeight="40.0" prefWidth="40.0" text="4" GridPane.rowIndex="2" />
         <Button mnemonicParsing="false" onAction="#processNumber" prefHeight="40.0" prefWidth="40.0" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <Button mnemonicParsing="false" onAction="#processNumber" prefHeight="40.0" prefWidth="40.0" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" />
         <Button mnemonicParsing="false" onAction="#processOperator" prefHeight="40.0" prefWidth="40.0" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" />
         <Button mnemonicParsing="false" onAction="#processNumber" prefHeight="40.0" prefWidth="40.0" text="1" GridPane.rowIndex="3" />
         <Button mnemonicParsing="false" onAction="#processNumber" prefHeight="40.0" prefWidth="40.0" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <Button mnemonicParsing="false" onAction="#processNumber" prefHeight="40.0" prefWidth="40.0" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3" />
         <Button mnemonicParsing="false" onAction="#processOperator" prefHeight="40.0" prefWidth="40.0" text="+" GridPane.columnIndex="3" GridPane.rowIndex="3" />
         <Button mnemonicParsing="false" onAction="#processNegate" prefHeight="40.0" prefWidth="40.0" text="±" GridPane.rowIndex="4" />
         <Button mnemonicParsing="false" onAction="#processNumber" prefHeight="40.0" prefWidth="40.0" text="0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <Button mnemonicParsing="false" onAction="#processDot" prefHeight="40.0" prefWidth="40.0" text="." GridPane.columnIndex="2" GridPane.rowIndex="4" />
         <Button mnemonicParsing="false" onAction="#processCalculate" prefHeight="40.0" prefWidth="40.0" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
   </VBox>
   <Separator orientation="VERTICAL" prefHeight="200.0" />
   <TextArea fx:id="txtLog" editable="false" prefWidth="200.0">
      <HBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </HBox.margin></TextArea>
</HBox>
